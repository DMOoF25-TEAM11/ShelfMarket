<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Modern Dark Theme Colors -->
    <Color x:Key="WindowBackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="ControlBackgroundColor">#FF252526</Color>
    <Color x:Key="ControlForegroundColor">#FFCCCCCC</Color>
    <Color x:Key="AccentColor">#FF3A96DD</Color>
    
    <!-- Button Colors -->
    <Color x:Key="ButtonBackgroundColor">#FF2D2D30</Color>
    <Color x:Key="ButtonForegroundColor">#FFCCCCCC</Color>
    <Color x:Key="ButtonBorderColor">#FF3A96DD</Color>
    <Color x:Key="ButtonHoverBackgroundColor">#FF37373D</Color>
    <Color x:Key="ButtonHoverForegroundColor">#FFFFFFFF</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#FF23232A</Color>
    <Color x:Key="ButtonPressedForegroundColor">#FFBEE6FD</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#FF2C2C2C</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#FF6D6D6D</Color>
    <Color x:Key="ButtonDisabledBorderColor">#FF3A3A3A</Color>
    
    <!-- TextBox Colors-->
    <Color x:Key="TextBoxBackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="TextBoxForegroundColor">#FFCCCCCC</Color>
    <Color x:Key="TextBoxBorderColor">#FF3A96DD</Color>
    <Color x:Key="TextBoxCaretColor">#FF3A96DD</Color>
    <Color x:Key="TextBoxHoverBorderColor">#FF61AFEF</Color>
    <Color x:Key="TextBoxHoverBackgroundColor">#FF23232A</Color>
    <Color x:Key="TextBoxHoverForegroundColor">#FFFFFFFF</Color>
    <Color x:Key="TextBoxDisabledBackgroundColor">#FF232323</Color>
    <Color x:Key="TextBoxDisabledForegroundColor">#FF6D6D6D</Color>
    <Color x:Key="TextBoxDisabledBorderColor">#FF3A3A3A</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}" />
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="{StaticResource ControlForegroundColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="{StaticResource ButtonForegroundColor}" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="{StaticResource ButtonBorderColor}" />
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource ButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonHoverForegroundBrush" Color="{StaticResource ButtonHoverForegroundColor}" />
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{StaticResource ButtonPressedBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonPressedForegroundBrush" Color="{StaticResource ButtonPressedForegroundColor}" />
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{StaticResource ButtonDisabledBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{StaticResource ButtonDisabledForegroundColor}" />
    <SolidColorBrush x:Key="ButtonDisabledBorderBrush" Color="{StaticResource ButtonDisabledBorderColor}" />
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{StaticResource TextBoxBackgroundColor}" />
    <SolidColorBrush x:Key="TextBoxForegroundBrush" Color="{StaticResource TextBoxForegroundColor}" />
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{StaticResource TextBoxBorderColor}" />
    <SolidColorBrush x:Key="TextBoxCaretBrush" Color="{StaticResource TextBoxCaretColor}" />
    <SolidColorBrush x:Key="TextBoxHoverBorderBrush" Color="{StaticResource TextBoxHoverBorderColor}" />
    <SolidColorBrush x:Key="TextBoxHoverBackgroundBrush" Color="{StaticResource TextBoxHoverBackgroundColor}" />
    <SolidColorBrush x:Key="TextBoxHoverForegroundBrush" Color="{StaticResource TextBoxHoverForegroundColor}" />
    <SolidColorBrush x:Key="TextBoxDisabledBackgroundBrush" Color="{StaticResource TextBoxDisabledBackgroundColor}" />
    <SolidColorBrush x:Key="TextBoxDisabledForegroundBrush" Color="{StaticResource TextBoxDisabledForegroundColor}" />
    <SolidColorBrush x:Key="TextBoxDisabledBorderBrush" Color="{StaticResource TextBoxDisabledBorderColor}" />

    <!-- Window Style -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ControlForegroundBrush}" />
    </Style>

    <!-- Frame Style -->
    <!--<Style TargetType="Frame">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ControlForegroundBrush}" />
    </Style>-->

    <!-- UserControl -->
    <!--<Style TargetType="UserControl">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ControlForegroundBrush}" />
    </Style>-->

    <!-- StackPanel Style -->
    <Style TargetType="StackPanel">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
    </Style>
    
    <!-- Button Style -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- TextBlock Style -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ControlForegroundBrush}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Margin" Value="4" />
    </Style>

    <!-- TextBox Style -->
    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="4" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="CaretBrush" Value="{StaticResource TextBoxCaretBrush}" />
    </Style>

    <!-- Menu Style -->
    <!--<Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ControlForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>-->

    <!-- Style for the Title TextBlock -->
    <Style x:Key="TitleStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>