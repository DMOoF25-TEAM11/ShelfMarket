<UserControl x:Class="ShelfMarket.UI.Views.UserControls.ManageShelfTenantContractLineView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels"
      xmlns:components="clr-namespace:ShelfMarket.UI.Views.UserControls.Components"
      d:DataContext="{d:DesignInstance Type=viewmodels:ManagesShelfTenantContractLineViewModel}"
      mc:Ignorable="d">

    <!-- Root grid: two columns (left = list, right = form), same structure as ManagesShelfTenantView -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Contract lines list -->
            <Border Grid.Column="0" Style="{StaticResource ListBorder}">
                <DockPanel>
                    <ListView ItemsSource="{Binding Items}"
                              SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="#" DisplayMemberBinding="{Binding LineNumber}" Width="60"/>
                                <GridViewColumn Header="ShelfId" DisplayMemberBinding="{Binding ShelfId}" Width="220"/>
                                <GridViewColumn Header="Pris/md." DisplayMemberBinding="{Binding PricePerMonth}" Width="90"/>
                                <GridViewColumn Header="Special/md." DisplayMemberBinding="{Binding PricePerMonthSpecial}" Width="100"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Right: Form and actions -->
            <StackPanel Grid.Column="1">
                <!-- Section title -->
                <TextBlock Text="Kontrakt linje"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,12"/>

                <!-- Two-column form layout -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Column 1 -->
                    <StackPanel Grid.Column="0">
                        <StackPanel>
                            <TextBlock Text="Kontrakt Id"/>
                            <!-- Read-only: typically set by parent contract -->
                            <TextBox Text="{Binding ShelfTenantContractId}"
                                     IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Linjenr." />
                            <TextBox Text="{Binding LineNumber, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     ToolTip="1, 2, 3, ..."/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Column 2 -->
                    <StackPanel Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Reol Id" />
                            <TextBox Text="{Binding ShelfId, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     ToolTip="GUID for reolen"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Pris pr. måned" />
                            <TextBox Text="{Binding PricePerMonth, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     ToolTip="Standard pris"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Special pris pr. måned" />
                            <TextBox Text="{Binding PricePerMonthSpecial, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                     ToolTip="Valgfri special pris"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- CRUD actions (same component pattern as ManagesShelfTenantView) -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                    <components:CRUDFormControl DataContext="{Binding}" />
                </StackPanel>

                <!-- Messages -->
                <TextBlock Text="{Binding InfoMessage}"
                           Foreground="#2e7d32"
                           Margin="0,0,0,4"
                           Visibility="{Binding HasInfoMessage, Converter={StaticResource BoolToVis}}"/>
                <TextBlock Text="{Binding Error}"
                           Foreground="Tomato"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
