<UserControl x:Class="ShelfMarket.UI.Views.UserControls.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Change user" FontSize="16" FontWeight="SemiBold"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
            <TextBlock Text="Role" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="160"
                      ItemsSource="{Binding Levels}"
                      SelectedItem="{Binding SelectedLevel, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
            <TextBlock Text="Password" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <PasswordBox x:Name="Pwd" Width="160" PasswordChanged="PasswordBox_OnPasswordChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,16,0,0">
            <Button Content="Confirm" Width="100" Margin="0,0,8,0" Command="{Binding ConfirmCommand}"/>
            <Button Content="Cancel" Width="100" Command="{Binding CancelCommand}"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Margin="216,0,0,0" VerticalAlignment="Center"
                   Foreground="Firebrick"
                   Text="{Binding Error}"/>
    </Grid>
</UserControl>