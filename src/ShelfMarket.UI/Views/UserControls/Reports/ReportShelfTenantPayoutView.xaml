<UserControl x:Class="ShelfMarket.UI.Views.UserControls.Reports.ReportShelfTenantPayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShelfMarket.UI.Views.UserControls"
             xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels.Reports" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ReportShelfTenantPayoutViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding StartDate}" Margin="0,0,16,0"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker SelectedDate="{Binding EndDate}" Margin="0,0,16,0"/>
            <Button Content="Generate Report" Command="{Binding GenerateReportCommand}"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding ShelfTenantPayoutReportItems}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tenant" Binding="{Binding TenantName}" Width="*"/>
                <DataGridTextColumn Header="Total Sales" Binding="{Binding TotalSales, StringFormat=C}" Width="*"/>
                <DataGridTextColumn Header="Commission" Binding="{Binding Commission, StringFormat=C}" Width="*"/>
                <DataGridTextColumn Header="Next Month Rent" Binding="{Binding NextMonthRent, StringFormat=C}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
