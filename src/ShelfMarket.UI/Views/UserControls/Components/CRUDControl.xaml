<UserControl x:Class="ShelfMarket.UI.Views.UserControls.Components.CRUDFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShelfMarket.UI.Views.UserControls.Components"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0">
        <Button Content="Tilføj" Width="80" Margin="0,0,8,0" Command="{Binding AddCommand}"
                Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVis}}"/>
        <Button Content="Gem" Width="80" Margin="0,0,8,0" Command="{Binding SaveCommand}"
                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>
        <Button Content="Slet" Width="80" Margin="0,0,8,0" Command="{Binding DeleteCommand}"
                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>
        <Button Content="Annuller" Width="80" Command="{Binding CancelCommand}"/>
    </StackPanel>
</UserControl>
