<UserControl x:Class="ShelfMarket.UI.Views.ManagesShelfTenantContractView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:ShelfMarket.UI.Views.UserControls"
      xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels"
      xmlns:components="clr-namespace:ShelfMarket.UI.Views.UserControls.Components"
      d:DataContext="{d:DesignInstance Type=viewmodels:ShelfTenantContractViewModel}"
      mc:Ignorable="d">

    <Grid>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Reol lejeren: " FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>
                <TextBlock Text="{Binding ShelfTenantDisplayName}" FontSize="16" FontWeight="Normal" Margin="0,0,0,12"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource ListBorder}">
                    <ListBox ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2,1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ContractNumber}" />
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding StartDate, StringFormat={}{0:yyyy-MM}}" />
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding EndDate, StringFormat={}{0:yyyy-MM}}" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CancelledAt, StringFormat={}{0:yyyy-MM}}" />
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="260"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Contract number" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding SelectedItem.ContractNumber}"
                               VerticalAlignment="Center" />

                    <TextBlock Grid.Row="0"
                               Grid.Column="3"
                               Text="Cancelled at"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"
                               Visibility="{Binding IsContractCancelled, Converter={StaticResource BoolToVis}}"/>

                    <Grid Grid.Row="0" Grid.Column="4" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedItem.CancelledAt, StringFormat={}{0:yyyy-MM-dd}}"/>
                    </Grid>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Start" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <components:MonthYearPicker Grid.Row="1" Grid.Column="1"
                                                SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                MaxHeight="25" MinWidth="200" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="1" Grid.Column="3" Text="End" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <components:MonthYearPicker Grid.Row="1" Grid.Column="4"
                                                SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                MaxHeight="25" MinWidth="200" VerticalAlignment="Center"/>

                    <Grid Grid.Row="2" Margin="10">
                        <TextBlock Text="{Binding InfoMessage}" Foreground="#2e7d32" Margin="0,0,0,4"
                                   Visibility="{Binding HasInfoMessage, Converter={StaticResource BoolToVis}}"/>
                        <TextBlock Text="{Binding Error}" Foreground="Tomato" TextWrapping="Wrap"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="8">
                            <components:CRUDFormControl DataContext="{Binding}" />
                            <Button Content="Cancel contract" Command="{Binding CancelContractCommand}" Margin="8,0,0,0" Visibility="{Binding IsContractActive, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Bottom: Contract lines of selected contract -->
            <Border Grid.Row="2"
                    Margin="0,12,0,0"
                    Padding="8"
                    Style="{StaticResource ListBorder}"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                <StackPanel>
                    <TextBlock Text="Kontrakt linjer" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <DataGrid ItemsSource="{Binding ContractLinesVM.Items}"
                              SelectedItem="{Binding ContractLinesVM.SelectedItem, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Line #" Binding="{Binding LineNumber}" Width="SizeToHeader"/>
                            <DataGridTextColumn Header="Shelf" Binding="{Binding ShelfId}" Width="*" />
                            <DataGridTextColumn Header="Price/month" Binding="{Binding PricePerMonth, StringFormat={}{0:C}}" Width="Auto"/>
                            <DataGridTextColumn Header="Special" Binding="{Binding PricePerMonthSpecial, StringFormat={}{0:C}}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
