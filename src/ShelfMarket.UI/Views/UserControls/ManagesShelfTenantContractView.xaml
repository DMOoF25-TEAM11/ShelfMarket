<UserControl x:Class="ShelfMarket.UI.Views.ManagesShelfTenantContractView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:ShelfMarket.UI.Views.UserControls"
      xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels"
      xmlns:components="clr-namespace:ShelfMarket.UI.Views.UserControls.Components"
      d:DataContext="{d:DesignInstance Type=viewmodels:ManagesShelfTenantContractViewModel}"
      mc:Ignorable="d">

    <Grid>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock Text="Reol lejeren: "
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>
                <TextBlock Text="{Binding ShelfTenantDisplayName}"
                       FontSize="16"
                       FontWeight="Normal"
                       Margin="0,0,0,12"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Style="{StaticResource ListBorder}">
                </Border>
                <!-- Form fields -->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="260"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Contract number -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Contract number" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="1"
                         Text="{Binding ContractNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="ContractNumber_PreviewTextInput"
                         VerticalAlignment="Center" />
                    <!--DataObject.Pasting="ContractNumber_OnPasting"-->

                    <!-- Cancelled at -->
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Cancelled at" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <DatePicker Grid.Row="0" Grid.Column="4"
                            SelectedDate="{Binding CancelledAt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            VerticalAlignment="Center" />

                    <!-- Start month/year -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Start" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <components:MonthYearPicker Grid.Row="1" Grid.Column="1"
                                            SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            MaxHeight="25" MinWidth="200" VerticalAlignment="Center"/>

                    <!-- End month/year -->
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="End" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <components:MonthYearPicker Grid.Row="1" Grid.Column="4"
                                            SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            MaxHeight="25" MinWidth="200" VerticalAlignment="Center"/>

                        <Grid Grid.Row="2" Margin="10">
                            <!-- Informational message (auto-clears), visible when HasInfoMessage -->
                            <TextBlock Text="{Binding InfoMessage}"
                           Foreground="#2e7d32"
                           Margin="0,0,0,4"
                           Visibility="{Binding HasInfoMessage, Converter={StaticResource BoolToVis}}"/>

                            <!-- Error message (wraps) -->
                            <TextBlock Text="{Binding Error}"
                           Foreground="Tomato"
                           TextWrapping="Wrap"/>

                            <!-- CRUD buttons: prefer ViewModel="{Binding}" for the reusable control -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="8">
                                <!-- If CRUDFormControl template expects ViewModel DP: -->
                                <!-- <components:CRUDFormControl ViewModel="{Binding}" /> -->
                                <!-- If CRUDFormControl reads DataContext for commands (alternate template): -->
                                <components:CRUDFormControl DataContext="{Binding}" />
                                <!-- Optional: Navigation to tenant contracts (uncomment and bind when implemented)
                    <Button Content="Gå til lejekontrakter"
                            Command="{Binding MoveToTenantContractsCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Width="110"/> -->
                        </StackPanel>
                    </Grid>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
