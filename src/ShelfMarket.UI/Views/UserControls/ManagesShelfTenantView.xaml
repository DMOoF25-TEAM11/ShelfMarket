<UserControl x:Class="ShelfMarket.UI.Views.UserControls.ManagesShelfTenantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels" 
             xmlns:components="clr-namespace:ShelfMarket.UI.Views.UserControls.Components"
             d:DataContext="{d:DesignInstance Type=viewmodels:ManagesShelfTenantViewModel}"
             mc:Ignorable="d">

    <!-- Root grid: two columns (left = list, right = form) -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Tenants list -->
            <Border Grid.Column="0" Style="{StaticResource ListBorder}">
                <DockPanel>
                    <!-- Bind to a collection of ManagesShelfTenantListItemViewModel -->
                    <ListBox ItemsSource="{Binding Items}"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="FirstName"/>
                                            <Binding Path="LastName"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Right: Tenant form and actions -->
            <StackPanel Grid.Column="1">
                <!-- Section title -->
                <TextBlock Text="Lejer"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

                <!-- Two-column form layout for tenant fields -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Column 1: First name, Address, City -->
                    <StackPanel Grid.Column="0">
                        <StackPanel>
                            <TextBlock Text="Fornavn" />
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Adresse" />
                            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="By" />
                            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Column 2: Last name, Postal code, Email, Phone -->
                    <StackPanel Grid.Column="1">
                        <StackPanel>
                            <TextBlock Text="Efternavn" />
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Postnr." />
                            <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Email" />
                            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Telefon" />
                            <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- CRUD buttons: prefer ViewModel="{Binding}" for the reusable control -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                    <!-- If CRUDFormControl template expects ViewModel DP: -->
                    <!-- <components:CRUDFormControl ViewModel="{Binding}" /> -->
                    <!-- If CRUDFormControl reads DataContext for commands (alternate template): -->
                    <components:CRUDFormControl DataContext="{Binding}" />
                    <!-- Optional: Navigation to tenant contracts (uncomment and bind when implemented)
                <Button Content="Gå til lejekontrakter"
                        Command="{Binding MoveToTenantContractsCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="110"/> -->
                </StackPanel>

                <!-- Informational message (auto-clears), visible when HasInfoMessage -->
                <TextBlock Text="{Binding InfoMessage}"
                       Foreground="#2e7d32"
                       Margin="0,0,0,4"
                       Visibility="{Binding HasInfoMessage, Converter={StaticResource BoolToVis}}"/>

                <!-- Error message (wraps) -->
                <TextBlock Text="{Binding Error}"
                       Foreground="Tomato"
                       TextWrapping="Wrap"/>

                <!-- Navigation button to contracts (active alternative) -->
                <Button Content="Gå til lejekontrakter"
                    Command="{Binding OnNavigateToTenantContractsCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="110"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
