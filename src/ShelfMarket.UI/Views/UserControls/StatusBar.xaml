<UserControl x:Class="ShelfMarket.UI.Views.UserControls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShelfMarket.UI.Views.UserControls"
             mc:Ignorable="d" >
    <Border Style="{StaticResource StatusBar.Container}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Internet status (left) -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Style="{StaticResource Status.Indicator}"
                         Tag="{Binding IsInternetAvailable, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock Margin="8,0,4,0" Style="{StaticResource Text.Body}" Text="Internet:"/>
                <TextBlock Style="{StaticResource Status.Text}"
                           Tag="{Binding IsInternetAvailable, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </StackPanel>

            <!-- Database status (right) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Ellipse Style="{StaticResource Status.Indicator}"
                         Tag="{Binding IsDatabaseConnected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <TextBlock Margin="8,0,4,0" Style="{StaticResource Text.Body}" Text="Database:"/>
                <TextBlock Style="{StaticResource Status.Text}"
                           Tag="{Binding IsDatabaseConnected, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
