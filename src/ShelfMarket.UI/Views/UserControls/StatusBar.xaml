<UserControl x:Class="ShelfMarket.UI.Views.UserControls.StatusBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShelfMarket.UI.Views.UserControls"
             xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:StatusBarViewModel}"
             mc:Ignorable="d" >
    <Grid VerticalAlignment="Bottom">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Bruger:" Margin="0 0 8 0"/>
            <TextBlock Text="{Binding User}" Margin="0 0 8 0"/>
            
            <TextBlock Text="|" Margin="0 0 8 0"/>
            
            <TextBlock Text="Db:" Margin="0 0 8 0"/>
            <!-- replace with uft16 icons -->
            <TextBlock Text="Forbundet" Visibility="{Binding IsDbConnected}" Margin="0 0 8 0"/>
            <TextBlock Text="Findelse afbrudt" Visibility="{Binding IsDbNotConnected}" Margin="0 0 8 0"/>

            <TextBlock Text="|" Margin="0 0 8 0"/>
            
            <!-- replace with uft16 icons -->
            <TextBlock Text="{Binding IsDbSaving}"  Margin="0 0 8 0" />
        </StackPanel>
    </Grid>
</UserControl>
