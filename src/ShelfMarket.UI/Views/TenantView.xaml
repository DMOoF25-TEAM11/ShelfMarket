<UserControl x:Class="ShelfMarket.UI.Views.UserControls.TenantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ShelfMarket.UI;component/Views/Theme/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="FormRow" TargetType="StackPanel">
                <Setter Property="Orientation" Value="Vertical"/>
                <Setter Property="Margin" Value="0,0,12,8"/>
            </Style>

            <Style x:Key="FormLabel" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="#555"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="0,0,12,0" Padding="8" BorderBrush="#DDD" BorderThickness="1">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                    <Button Content="Opdatér"
                            Command="{Binding RefreshTenantsCommand}" />
                </StackPanel>

                <ListBox ItemsSource="{Binding Tenants}"
                         SelectedItem="{Binding SelectedTenant, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding FirstName}"/>
                                <Run Text=" "/>
                                <Run Text="{Binding LastName}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Lejer"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,12"/>

            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="Fornavn" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="Adresse" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="By" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="Efternavn" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="Postnr." Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="Email" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Style="{StaticResource FormRow}">
                        <TextBlock Text="Telefon" Style="{StaticResource FormLabel}"/>
                        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,8">
                <Button Content="Tilføj"
                        Command="{Binding AddCommand}"
                        Margin="0,0,8,0"
                        Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVis}}"/>

                <Button Content="Gem"
                        Command="{Binding SaveCommand}"
                        Margin="0,0,8,0"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>

                <Button Content="Slet"
                        Command="{Binding DeleteCommand}"
                        Margin="0,0,8,0"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>

                <Button Content="Nulstil"
                        Command="{Binding ResetCommand}"
                        Margin="0,0,8,0"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}"/>

                <Button Content="Annuller"
                        Command="{Binding CancelCommand}"
                        Width="90"/>
            </StackPanel>

            <TextBlock Text="{Binding InfoMessage}"
                       Foreground="#2e7d32"
                       Margin="0,0,0,4"
                       Visibility="{Binding HasInfoMessage, Converter={StaticResource BoolToVis}}"/>

            <TextBlock Text="{Binding Error}"
                       Foreground="Tomato"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
