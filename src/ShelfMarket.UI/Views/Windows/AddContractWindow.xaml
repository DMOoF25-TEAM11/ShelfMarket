<UserControl x:Class="ShelfMarket.UI.Views.Windows.AddContractWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Style="{StaticResource Popup.Window}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titel og luk -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Ny kontrakt" Style="{StaticResource Text.H2}" HorizontalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="32" Height="32"
                        Background="{StaticResource Brush.Transparent}" BorderThickness="0"
                        Foreground="{StaticResource Brush.Text}"
                        Click="Close_Click"/>
            </Grid>

            <!-- Lejeoplysninger -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="Lejeoplysninger" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Fornavn" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Efternavn" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0"/>
                </Grid>

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Adresse" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="By" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0"/>
                </Grid>

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Postnummer" HorizontalAlignment="Center" Style="{StaticResource Text.Body}"/>                    
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,4,0,0"/>                    
                </Grid>

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Telefon" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Email" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0"/>
                </Grid>
            </StackPanel>

            <!-- Lejeperiode -->
            <!-- Måneder er placeholders til vi får rigtige kode, måske skal der også årstal inden ovre. -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock Text="Lejeperiode" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Start måned" HorizontalAlignment="Center" Style="{StaticResource Text.Label}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Startår" HorizontalAlignment="Center"  Style="{StaticResource Text.Label}"/>
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Slut måned" HorizontalAlignment="Center" Style="{StaticResource Text.Label}"/>
                    <TextBlock Grid.Row="0" Grid.Column="6" Text="Slut år" HorizontalAlignment="Center" Style="{StaticResource Text.Label}"/>
                    <ComboBox Grid.Row="1" Grid.Column="0" SelectedIndex="0" Margin="0,4,0,0"
                              ItemsSource="{StaticResource MonthsDa}"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" SelectedIndex="0" Margin="0,4,0,0"
                              ItemsSource="{StaticResource YearDa}"/>
                    <ComboBox Grid.Row="1" Grid.Column="4" SelectedIndex="2" Margin="0,4,0,0"
                              ItemsSource="{StaticResource MonthsDa}"/>
                    <ComboBox Grid.Row="1" Grid.Column="6" SelectedIndex="0" Margin="0,4,0,0"
                              ItemsSource="{StaticResource YearDa}"/>
                </Grid>                
            </StackPanel>

            <!-- Antal reoler -->
            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                <TextBlock Text="Antal reoler" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ReolAntalCombo" Grid.Column="0" SelectedIndex="0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource Text.Body}">
                        <Run Text="Tilgængelighed:"/>
                        <Run Text=" Tjekkes ved valg"/>
                    </TextBlock>
                </Grid>
            </StackPanel>

            <!-- Prisoversigt -->
            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                <TextBlock Text="Prisoversigt" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="18"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Betaling for leje i alt:" VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="Udregning i kr" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Kr." VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="1" Text="Special pris" VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="Special pris" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Kr." VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                </Grid>
                
            </StackPanel>

            <!-- Knapper -->
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Vælg reoler" Style="{StaticResource Button.Primary}" Height="38" Click="ChooseShelves_Click"/>
                <Button Grid.Column="2" Content="Annuller" Style="{StaticResource Button.Secondary}" Height="38" Click="Close_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
 

