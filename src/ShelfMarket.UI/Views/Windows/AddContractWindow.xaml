<UserControl x:Class="ShelfMarket.UI.Views.Windows.AddContractWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:ShelfMarket.UI.Views.UserControls.Components" 
             xmlns:viewmodels="clr-namespace:ShelfMarket.UI.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:AddContractWindowViewModel}"
             mc:Ignorable="d">

    <Border Style="{StaticResource Popup.Window}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titel og luk -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Ny kontrakt" Style="{StaticResource Text.H2}" HorizontalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="32" Height="32"
                        Background="{StaticResource Brush.Transparent}" BorderThickness="0"
                        Foreground="{StaticResource Brush.Text}"
                        Command="{Binding CustomCancelCommand}"/>
            </Grid>

            <!-- Lejeoplysninger -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="Lejeoplysninger" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Fornavn" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Efternavn" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="80"/>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Adresse" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="By" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="PostNr." Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0" Text="{Binding Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0" Text="{Binding City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Margin="0,4,0,0" Text="{Binding PostalCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>

                

                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Telefon" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Email" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0" Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0" Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </StackPanel>

            <!-- Lejeperiode -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock Text="Lejeperiode" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Start periode -->
                    <TextBlock Grid.Row="0" Text="Start periode" HorizontalAlignment="Left" Style="{StaticResource Text.Label}"/>
                    <components:MonthYearPicker Grid.Row="1" 
                                                Margin="0,4,0,12"
                                                IsFlexible="False"
                                                VerticalAlignment="Center"
                                                SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- Slut periode -->
                    <TextBlock Grid.Row="2" Text="Slut periode" HorizontalAlignment="Left" Style="{StaticResource Text.Label}"/>
                    <components:MonthYearPicker Grid.Row="3" 
                                                Margin="0,4,0,0"
                                                IsFlexible="False"
                                                VerticalAlignment="Center"
                                                SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>                
            </StackPanel>

            <!-- Antal reoler -->
            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                <TextBlock Text="Antal reoler" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="ReolAntalCombo" Grid.Column="0" SelectedIndex="0">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                    <TextBlock Grid.Column="2" VerticalAlignment="Center" Style="{StaticResource Text.Body}">
                        <Run Text="Tilgængelighed:"/>
                        <Run Text=" Tjekkes ved valg"/>
                    </TextBlock>
                </Grid>
            </StackPanel>

            <!-- Prisoversigt -->
            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                <TextBlock Text="Prisoversigt" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="18"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Betaling for leje i alt:" VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="Udregning i kr" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Kr." VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                    <TextBlock Grid.Row="1" Text="Special pris" VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="Special pris" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Kr." VerticalAlignment="Center" Style="{StaticResource Text.Body}"/>
                </Grid>
                
            </StackPanel>

            <!-- Error message -->
            <TextBlock Grid.Row="6" Text="{Binding Error}" 
                       Foreground="Red" 
                       Margin="0,0,0,12"
                       TextWrapping="Wrap"
                       Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"/>

            <!-- Knapper -->
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Opret kontrakt" Style="{StaticResource Button.Primary}" Height="38" Command="{Binding AddCommand}"/>
                <Button Grid.Column="2" Content="Annuller" Style="{StaticResource Button.Secondary}" Height="38" Command="{Binding CancelCommand}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
 

