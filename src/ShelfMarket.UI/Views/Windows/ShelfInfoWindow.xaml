<UserControl x:Class="ShelfMarket.UI.Views.Windows.ShelfInfoWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:components="clr-namespace:ShelfMarket.UI.Views.UserControls.Components"
             mc:Ignorable="d" Width="452">

    <Border Style="{StaticResource Popup.Window}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titel og luk -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TitleText" Text="Reol (Nummer)" Style="{StaticResource Text.H2}" HorizontalAlignment="Center"/>
                <Button Grid.Column="1" Content="✕" Width="32" Height="32"
                        Background="{StaticResource Brush.Transparent}" BorderThickness="0"
                        Foreground="{StaticResource Brush.Text}"
                        Click="Close_Click"/>
            </Grid>

            <!-- Lejeoplysninger -->
            <StackPanel Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="Lejer Navn" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Fornavn" Style="{StaticResource Text.Body}"/>                    
                    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,4,0,0"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Efternavn" Style="{StaticResource Text.Body}"/>                    
                    <TextBox Grid.Row="1" Grid.Column="2" Margin="0,4,0,0"/>                    
                </Grid>                
            </StackPanel>

            <!-- Lejeperiode -->
            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock Text="Lejeperiode" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Nuværende dato -->
                    <TextBlock Grid.Row="0" Text="Nuværende dato" HorizontalAlignment="Left" Style="{StaticResource Text.Label}"/>
                    <components:MonthYearPicker Grid.Row="1" 
                                                Margin="0,4,0,12"
                                                IsFlexible="True"
                                                VerticalAlignment="Center"
                                                SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <!-- Afslutning for nuværende kontrakt -->
                    <TextBlock Grid.Row="2" Text="Afslutning for nuværende kontrakt" HorizontalAlignment="Left" Style="{StaticResource Text.Label}"/>
                    <components:MonthYearPicker Grid.Row="3" 
                                                Margin="0,4,0,0"
                                                IsFlexible="True"
                                                VerticalAlignment="Center"
                                                x:Name="EndDatePicker"/>
                </Grid>
            </StackPanel>

            <!-- Reol Type -->
            <StackPanel Grid.Row="3" Margin="0,0,0,12">
                <TextBlock Text="Reol Type" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Retning" Style="{StaticResource Text.Label}"/>
                    <ComboBox x:Name="ReolTypeCombo" Grid.Row="1" Grid.Column="0" SelectedIndex="0" SelectionChanged="ReolTypeCombo_SelectionChanged">
                        <ComboBoxItem Content="Vertikal"/>
                        <ComboBoxItem Content="Horizontal"/>                        
                    </ComboBox>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Type Reol" Style="{StaticResource Text.Label}"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" SelectedIndex="0" Margin="0,4,0,0" />
                </Grid>
            </StackPanel>

            <!-- Tilføjelser -->
            <StackPanel Grid.Row="4" Margin="0,0,0,12">
                <TextBlock Text="Noget i forhold til varer?" Style="{StaticResource Text.H2}"/>
                <TextBlock Text="Evt en liste af en art?" Style="{StaticResource Text.H2}"/>
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                </Grid>
            </StackPanel>


            <!-- Knapper -->
            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Gem" Style="{StaticResource Button.Primary}" Height="38" Click="ChooseShelves_Click"/>
                <Button Grid.Column="2" Content="Opsig Leje" Style="{StaticResource Button.Secondary}" Height="38" Click="Close_Click"/>
                <Button Grid.Column="4" Content="Tilføj varer" Style="{StaticResource Button.Primary}" Height="38" Click="ChooseShelves_Click"/>                
                <Button Grid.Column="6" Content="Slet Reol" Style="{StaticResource Button.Secondary}" Height="38" Click="DeleteShelf_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
 

