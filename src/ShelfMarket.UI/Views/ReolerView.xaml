                        Canvas.Top="-4" 
                        Width="1094" 
                        Height="694" 
                        BorderBrush="{StaticResource Brush.Border}" 
                        BorderThickness="6" 
                        CornerRadius="8" 
                        Background="{StaticResource Brush.SurfaceAlt}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

