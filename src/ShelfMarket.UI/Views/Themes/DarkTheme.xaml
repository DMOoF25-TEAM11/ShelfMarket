<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:System="clr-namespace:System;assembly=mscorlib">


    <!-- Backgrounds -->
    <!-- BG0 – App canvas: Deepest backdrop for the window/shell. -->
    <SolidColorBrush x:Key="Bg0Brush" Color="#0F1115"/>
    <!-- BG1 – Surface: Default panel/card backgrounds. -->
    <SolidColorBrush x:Key="Bg1Brush" Color="#16181E"/>
    <!-- BG2 – Raised surface: Elevated panels, popovers, context menus. -->
    <SolidColorBrush x:Key="Bg2Brush" Color="#1D2028"/>
    <!-- BG3 – Muted/interactive: List rows, inputs at rest, subtle containers. -->
    <SolidColorBrush x:Key="Bg3Brush" Color="#242837"/>
    <!-- BG4 – Hover/active tint: Hover/pressed overlays, selected states. -->
    <SolidColorBrush x:Key="Bg4Brush" Color="#2D3242"/>

    <!-- Stroke / Dividers: A neutral line color (not a fill) for structure. -->
    <SolidColorBrush x:Key="StrokeBrush" Color="#3A3F52" />
    <SolidColorBrush x:Key="DividerBrush" Color="#2A2E3C" />

    <!-- Foregrounds -->
    <!-- FG0 – High emphasis: Primary text, headings, key values. -->
    <SolidColorBrush x:Key="Fg0Brush" Color="#FFFFFF"/>
    <!-- FG1 – Medium: Secondary text, labels, helper content. -->
    <SolidColorBrush x:Key="Fg1Brush" Color="#C9CDD7"/>
    <!-- FG2 – Low: Tertiary text, placeholders, metadata. -->
    <SolidColorBrush x:Key="Fg2Brush" Color="#A0A6B5"/>
    <!-- FG3 – Disabled: Disabled text/icons (use alpha to preserve contrast). -->
    <SolidColorBrush x:Key="Fg3Brush" Color="#747A88"/>
    <!-- FG4 – Inverse: Text/icons on primary color (e.g. on Accent). -->
    <SolidColorBrush x:Key="Fg4Brush" Color="#0F1115"/>

    <!-- Semantic -->
    <SolidColorBrush x:Key="AccentBrush" Color="#7AA2FF"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#3CCB7F"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFB55C"/>
    <SolidColorBrush x:Key="ErrorBrush"   Color="#FF6B6B"/>

    <!-- Shared states (overlays via opacity) -->
    <System:Double x:Key="HoverOpacity">0.06</System:Double>
    <System:Double x:Key="PressedOpacity">0.12</System:Double>
    <System:Double x:Key="DisabledOpacity">0.38</System:Double>

    
    
    
    
    <!-- Example usage -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource Bg0Brush}"/>
        <Setter Property="Foreground" Value="{StaticResource Fg0Brush}"/>
    </Style>

    <Style TargetType="Border" x:Key="Card">
        <Setter Property="Background" Value="{StaticResource Bg1Brush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource StrokeBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
    </Style>

    <!-- Panels -->
    <Style TargetType="Grid">
        <!--<Setter Property="Margin" Value="10 10 10 10" />-->
    </Style>
    
    <!-- TextBlock -->
    <Style TargetType="TextBlock" x:Key="SecondaryText">
        <Setter Property="Foreground" Value="{StaticResource Fg1Brush}"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="EditViewTitle">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Foreground" Value="{StaticResource Fg1Brush}"/>
    </Style>
    <!-- ListView -->

    <!-- Button -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="0 0 8 0" />
    </Style>

    <!-- Main Windows -->

</ResourceDictionary>
    