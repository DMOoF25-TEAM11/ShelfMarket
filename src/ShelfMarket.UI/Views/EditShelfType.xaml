<Page x:Class="ShelfMarket.UI.Views.EditShelfType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShelfMarket.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditShelfType">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Title row -->
            <RowDefinition Height="Auto"/>
            <!-- Form row-->
            <RowDefinition Height="*"/>
            <!-- ListView or BoxView row-->
            <RowDefinition Height="Auto"/>
            <!-- Error and status messages -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Top">
            <TextBlock Text="Tilføj og rediger reol typer" Style="{StaticResource TitleStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <!-- Form elements go here -->
        </StackPanel>
        <StackPanel Grid.Row="2" VerticalAlignment="Top">
            <!-- ListView or BoxView elements go here -->
        </StackPanel>
        <StackPanel Grid.Row="3" VerticalAlignment="Top">
            <!-- Error and status messages go here -->
        </StackPanel>
    </Grid>
</Page>
